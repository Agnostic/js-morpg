extends layouts/default.jade
block content
    #container
      #game
      .chat
        .messages
        form#chat-form(name='chat-form', onsubmit="return game.sendMessage();", action="#")
          input#chat-text.form-control(type='text')
          button.btn.btn-primary(type='submit') Send

    //- Socket.io
    script(src="/socket.io/socket.io.js")

    //- Melon
    script(src="/js/vendor/phaser.js")

    //- CocoonJS
    script.
      if (navigator.isCocoonJS) {
        document.write('<script src="/js/utils/xmlParser.js"><\/script>')
      }

    //- Game
    script(src="/js/app.js")
    script(src="/js/entities/character.js")
    script(src="/js/entities/player.js")